---
import MusicPlayerEvent from "./shared/MusicPlayerEvent.jsx";
import ProgressEvent from "./shared/ProgressEvent.astro";
import ProjectData from "./project/ProjectData.astro";

import { Image } from "astro:assets";
import LogoImage from "../assets/images/logo_6.png";
import SpinImage from "../assets/images/spin-image.svg";
import SoreLogo from "../assets/images/logo-SORE.svg";

import ImageEvent from "./shared/ImageEvent.astro";

export const frontmatter = {
  title: 'Projects',
};
---

<section class="w-full max-w-3xl flex justify-center items-center px-4 mt-5 mb-8" id="project">
  <div class="grid grid-cols-1 md:grid-cols-3 md:grid-rows-3 gap-5">
    <div class="w-full h-full rounded-xl overflow-hidden md:col-span-1">
      <MusicPlayerEvent />
    </div>

    <div class="w-full h-full border-2 border-zinc-800 rounded-xl overflow-hidden md:col-span-1">
      <ProgressEvent />
    </div>

    <div class="w-full h-full relative bg-zinc-800 text-whiteText md:row-span-2 rounded-xl overflow-hidden md:col-span-1">
      <div class="relative flex flex-col items-center z-10 my-20">
        <Image src={LogoImage} width={2245} height={2245} alt="project 1" loading="eager" class="w-20 animate-bounce"/>
       
        <h2 class="p-4 text-xl font-medium text-center">
          This page isn't ready yet
        </h2>
        
        <button class="bg-blueButton text-whiteText rounded-xl py-3 px-5 font-medium text-sm cursor-pointer duration-300 transition hover:bg-grayNetral hover:text-gray-400">
          Okay
        </button>
      </div>
      
      <div class="absolute top-[14rem] left-[16rem] md:w-[28rem] md:top-[22rem] md:left-[4rem] w-[18rem] rounded-full bg-gradient-to-tr from-whiteText to-grayNetral animate-spin-slow aspect-square overflow-hidden">
        <Image class="w-full h-full object-cover" src={SpinImage} alt="Animation Spin"/>
      </div>
    </div>

    <div class="w-full h-full bg-transparent md:col-start-3 md:row-start-3 rounded-xl overflow-hidden md:col-span-1">
      <ImageEvent 
        imagesource="/img/SerenityLogo2.jpeg"
        imagetitle="Serenity Logo Desgin"
        imagedesc={`Serenity is a mobile app for exploring interesting places in Jakarta.`}
      />
    </div>

    <div class="w-full h-full bg-zinc-800 text-whiteText md:col-span-2 md:row-span-2 col-start-1 md:row-start-2 rounded-xl overflow-hidden">
      <div class="p-4">
        <h2 class="font-medium text-xl mb-3">Projects</h2>
        <ProjectData/>
    </div>
    </div>

      <div class="w-full h-full bg-transparent md:row-start-4 rounded-xl overflow-hidden md:col-span-1">
        <ImageEvent 
        imagesource="/img/gamedev-project.png"
        imagetitle="Game Dev Project"
        imagedesc={`Ongoing project to create a 2D game using JavaScript.`}
      />
      </div>

      <div class="w-full h-full md:col-span-2 md:row-start-4 border-2 border-zinc-800 rounded-xl overflow-hidden">
        <div class="w-full h-full flex justify-center items-start text-white p-4">
          <Image src={SoreLogo} alt='Wahyu Seto Pranata' loading='lazy' class='w-9 h-9 mr-4 p-1 bg-white rounded-xl object-cover'/>
          <div class="flex flex-col gap-2">
            <div class="flex flex-row justify-start items-start">
              <h2 class="font-bold">
                SORE Pixel Crafters
              </h2>
              <span class="font-normal ml-2">. 1m ago</span>
            </div>
  
            <p class="font-normal">SORE Pixel Crafters is a digital agency that specializes in UI/UX Design and Web Development.</p>
  
            <div class="flex justify-start items-start gap-4">
              <button class="text-xl hover:text-red-500">
                  <i class="ri-heart-3-line"></i>
              </button>
  
              <a
                class= "text-xl hover:text-red-500"
                href= "https://sore-pixelcrafters.vercel.app/"
                target= "_blank"
                rel= "noopener noreferrer"
                aria-label="Visit Seto Journey Website"
              >
                <i class="ri-send-plane-line"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
  </div>
</section>

