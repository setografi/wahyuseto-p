---
import ChatWidget from './info/ChatWidget.tsx';
import MusicPlayer from './info/MusicPlayer.tsx';
import WeatherWidget from './info/WeatherWidget.tsx';
import ProgressEvent from './info/ProgressEvent.astro';

export const frontmatter = {
  title: 'Info',
};

const bintanWeather = {
  city: 'Bintan',
  kind: 'cloudy',
  temperature: 30,
  temperatureScale: 'C',
  wind: 15,
  windUnit: 'km/h',
  visibility: 10,
  visibilityUnit: 'km',
  airQuality: 45,
  humidity: 75,
};
---

<section id="info-section" class="mt-28 h-full w-full p-2 md:mt-0 md:p-4">
  <div
    class="grid h-full w-full grid-cols-1 items-start justify-center gap-4 md:grid-flow-col md:grid-cols-3 md:flex-row md:justify-end"
  >
    <div class="h-[31.25rem] md:col-span-2 md:h-full">
      <ChatWidget client:load />
    </div>

    <div class="grid grid-flow-row gap-4">
      <MusicPlayer client:load />
      <WeatherWidget data={bintanWeather} client:load />
      <ProgressEvent />
    </div>
  </div>
</section>
