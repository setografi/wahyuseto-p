    class="flex h-full w-full flex-col items-end justify-center gap-4 md:flex-row md:items-start md:justify-end"
  >
    <div
      class="glassmorphism glow-shadow flex w-full items-start justify-center rounded-lg border border-accent-lavender-400/60 p-4 backdrop-blur-2xl"
    >
      Hello
    </div>

    <div class="flex max-w-lg flex-col gap-4">
      <MusicPlayerEvent client:load />
      <ProgressEvent />
    </div>
  </div>
</section>
