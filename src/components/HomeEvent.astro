<section class="mx-auto mt-5 w-full rounded-2xl border-2 border-bodyPrimary-800 md:w-[48rem]">
  <div class="flex max-w-lg justify-start p-4 text-textPrimary-100">
    <Image
      src={ProfileImage}
      width={2730}
      height={2730}
      alt="Wahyu Seto Pranata"
      loading="eager"
      class="mr-4 h-9 w-9 rounded-xl bg-textPrimary-100 object-cover p-1"
    />
    <div class="flex flex-col gap-2">
      <div class="flex flex-row items-end justify-start gap-2 text-base">
        <h2 class="font-bold">Setografi</h2><i class="ri-verified-badge-fill text-blueButton"></i>
        <span class="text-sm font-normal text-textPrimary-300">. 1m ago</span>
      </div>

      <p class="text-sm font-normal text-textPrimary-300 md:text-base">
        Hello, I'm <span class="text-lg font-medium text-textPrimary-100">Wahyu Seto Pranata</span>,
        a unique creative <span
          class="font-offBit text-2xl tracking-widest text-textPrimary-100 lg:text-3xl"
          >Designer</span
        > and <span
          class="font-offBitdotbold text-2xl tracking-widest text-textPrimary-100 lg:text-3xl"
          >Developer</span
        >
        who spends much of his free time drinking coffee and traveling. I like learning new things and
        trying to apply them.
      </p>

      <div class="my-2 overflow-hidden rounded-xl">
        <Image
          src={ProfileImage}
          width={2730}
          height={2730}
          alt="Blog 01"
          loading="eager"
          class="h-64 w-full object-cover"
        />
      </div>

      <div class="inline-flex items-center pb-2 text-textPrimary-100">
        <i class="ri-map-pin-2-line mr-2 text-xl"></i>
        <p class="text-sm">Kepulauan Riau, Indonesia</p>
      </div>

      <div class="flex flex-col items-start justify-start gap-2 md:flex-row">
        <div class="flex gap-2">
          <button
            class="rounded-full bg-textPrimary-100 px-3 py-2 text-xl text-bodyPrimary-800 transition duration-300 ease-in-out hover:text-red-500"
          >
            <i class="ri-heart-3-line"></i>
          </button>

          <a
            href="mailto:wahyusetotkrx18@gmail"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Email me"
            class="inline-flex items-center justify-center gap-2 rounded-full bg-accentOne-600 px-4 py-2 text-xl text-textPrimary-100 transition duration-300 ease-in"
          >
            <p class="text-sm">Say hi</p>
            <i class="ri-send-plane-line"></i>
          </a>
        </div>

        <div class="inline-flex items-center rounded-full bg-bodyPrimary-700 px-4 py-2">
          <span class="mr-2 text-xl text-green-400">â€¢</span>
          <p class="text-sm">Available for work</p>
        </div>
      </div>
    </div>
  </div>
</section>
