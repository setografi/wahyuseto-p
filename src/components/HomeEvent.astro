---
import { Image } from 'astro:assets';
import ProfileImage from '../assets/images/profileimage2.jpg';
import ProfileButton from './shared/ProfileButton.jsx';
---

<!-- <section class="glass-effect mx-auto mt-6 grid w-full max-w-3xl grid-flow-row gap-4 p-4 md:mt-8">
