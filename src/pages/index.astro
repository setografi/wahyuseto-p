---
import Layout from '../layouts/Layout.astro';
import HomeEvent from '../components/HomeEvent.astro';
import ProjectEvent from '../components/ProjectEvent.astro';
import InfoEvent from '../components/InfoEvent.astro';
import AboutEvent from '../components/AboutEvent.astro';
import Navbar from '../components/layout/Navbar.astro';
import FooterEvent from '../components/layout/FooterEvent.astro';
---

<Layout title="Setografi" description="setografi portfolio">
  <div class="mx-auto h-dvh overflow-hidden p-6">
    <div class="flex h-full w-full overflow-hidden border border-dark-text-tertiary">
      <div class="fixed z-10 h-fit bg-transparent">
        <Navbar />
      </div>

      <div class="h-full w-full overflow-y-scroll bg-dark-background-primary">
        <HomeEvent />
        <ProjectEvent />
        <InfoEvent />
        <AboutEvent />
      </div>

      <div class="fixed bottom-6 z-10 h-fit bg-transparent">
        <FooterEvent />
      </div>
    </div>
  </div>
</Layout>
