---
import Layout from '../layouts/Layout.astro';
import HomeEvent from '../components/HomeEvent.astro';
import ProjectEvent from '../components/ProjectEvent.astro';
import InfoEvent from '../components/InfoEvent.astro';
import AboutEvent from '../components/AboutEvent.astro';
import Navbar from '../components/layout/Navbar.astro';
import FooterEvent from '../components/layout/FooterEvent.astro';
import Background from '../components/animation/Background.astro';
---

<Layout title="Setografi" description="setografi portfolio">
  <div class="relative h-full w-full overflow-hidden rounded-xl border border-dark-text-tertiary">
    <Background />

    <div class="absolute top-0 z-10 h-full w-full">
      <div class="fixed z-50 h-fit bg-transparent">
        <Navbar />
      </div>

      <div class="h-full w-full overflow-y-scroll">
        <HomeEvent />
        <ProjectEvent />
        <InfoEvent />
        <AboutEvent />
      </div>

      <div class="fixed bottom-6 z-10 h-fit bg-transparent">
        <FooterEvent />
      </div>
    </div>
  </div>
</Layout>
